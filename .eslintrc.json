{
  "extends": ["@phts", "@phts/eslint-config/addons/node"],
  "globals": {
    "metrics": true
  },
  "rules": {
    "import/order": "off",
    "import/newline-after-import": "off",
    "import/no-absolute-path": "off",
    "camelcase": "off",
    "eqeqeq": "warn",
    "new-cap": "warn",
    "no-console": "warn",
    "no-empty": "warn",
    "no-path-concat": "warn",
    "no-redeclare": "warn",
    "no-use-before-define": "warn",
    "no-unused-vars": "warn",
    "no-useless-call": "warn",
    "no-var": "off",
    "one-var": "off",
    "prefer-const": "warn",
    "spaced-comment": "off",
    "strict": "off"
  },
  "overrides": [
    {
      "files": "http/**/*.js",
      "env": {"browser": true}
    },
    {
      "files": "*",
      "extends": "@phts/eslint-config/addons/prettier"
    }
  ]
}
